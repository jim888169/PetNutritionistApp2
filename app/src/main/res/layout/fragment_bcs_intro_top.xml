<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 標題 -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="什麼是 BCS？"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- 前言說明 -->
        <TextView
            android:id="@+id/bcsIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="全球小動物獸醫學會（WSAVA）訂定一套體態評分系統（BCS），從過瘦到過胖以 1~9 分作為評分依據，提供飼主自行評估寵物胖瘦狀態。\n\n分數低於 4 分為偏瘦，超過 6 分要注意毛孩可能有過重問題。"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- 圖表 -->
        <ImageView
            android:id="@+id/bcsImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bcs_chart_wsava"
            android:adjustViewBounds="true"
            android:contentDescription="BCS 圖表"
            android:layout_marginBottom="24dp" />

        <!-- 下一頁按鈕：前往下半頁（分級說明） -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一頁（分級說明）" />
    </LinearLayout>
</ScrollView>
