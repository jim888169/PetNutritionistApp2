<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    tools:showIn="@layout/activity_main"
    tools:theme="@style/Theme.PetNutritionistApp">

    <!-- 可捲動內容 -->
<ScrollView
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true">

<!-- 內容容器 -->
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 中央內容欄（限制最大寬度 420dp，左右置中） -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="24dp"
        android:paddingBottom="@dimen/content_bottom_inset"
        app:layout_constrainedWidth="true"
        app:layout_constraintWidth_max="420dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 標題 -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:letterSpacing="0.02"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="20dp" />

        <!-- 圓形頭像 -->
        <ImageView
            android:id="@+id/dogImage"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginBottom="28dp"
            android:scaleType="centerCrop"
            android:src="@drawable/samoyed_office"
            android:background="@drawable/avatar_circle_clip"
            android:outlineProvider="background"
            android:clipToOutline="true"
            android:contentDescription="@string/dog_image_desc" />

        <!-- 認識 BCS（Outlined） -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBCS"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="266dp"
            android:layout_height="58dp"
            android:layout_marginBottom="14dp"
            android:text="@string/know_bcs"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_menu_info_details"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <!-- 開始分析狗狗（Filled） -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            style="?attr/materialButtonStyle"
            android:layout_width="269dp"
            android:layout_height="54dp"
            android:layout_marginBottom="14dp"
            android:text="@string/start_analyze"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <!-- 查看附近的寵物醫院（Filled） -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNearbyVet"
            style="?attr/materialButtonStyle"
            android:layout_width="270dp"
            android:layout_height="57dp"
            android:layout_marginBottom="16dp"
            android:text="@string/find_nearby_vet"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_dialog_map"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <!-- 上方漸層遮罩：不可點擊／不可聚焦，避免攔截手勢 -->
        <View
            android:id="@+id/topScrim"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/top_scrim"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:importantForAccessibility="no" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

    <!-- 左下角：AI 顧問（往上抬，避開底部列） -->
<com.google.android.material.button.MaterialButton
android:id="@+id/btnAIAdvisor"
style="?attr/materialButtonStyle"
android:layout_width="wrap_content"
android:layout_height="48dp"
android:layout_gravity="bottom|start"
android:layout_marginStart="16dp"
android:layout_marginEnd="16dp"
android:layout_marginBottom="@dimen/floating_buttons_clearance"
android:text="@string/ai_advisor"
android:textAllCaps="false"
android:textColor="@android:color/white"
app:backgroundTint="#000000"
app:icon="@drawable/ic_ai_advisor"
app:iconTint="@android:color/white"
app:iconPadding="8dp"
app:iconGravity="textStart"
app:cornerRadius="24dp" />

    <!-- 右下角：登出 FAB（去陰影＋往上抬） -->
<com.google.android.material.floatingactionbutton.FloatingActionButton
android:id="@+id/btnLogout"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="bottom|end"
android:layout_marginEnd="16dp"
android:layout_marginBottom="@dimen/floating_buttons_clearance"
app:useCompatPadding="false"
android:elevation="0dp"
android:translationZ="0dp"
app:srcCompat="@android:drawable/ic_lock_power_off" />

    </FrameLayout>
